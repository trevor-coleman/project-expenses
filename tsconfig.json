{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict" : true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*", "server/*", "classes/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "server", "classes"
  ],
  "exclude" : ["node_modules", "client","build"],

}


